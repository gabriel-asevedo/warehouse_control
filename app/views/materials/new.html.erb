<h2>New Item</h2>

<%= form_with model: @material do |form| %>
    
    <div>
        <%= form.label :name, "Item name" %> <br>
        <%= form.text_field :name, placeholder: "Enter the item name" %>
        <% @material.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :quantity %> <br>
        <%= form.number_field :quantity, placeholder: "0", min: 0 %>
        <% @material.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit "Create Item" %>
    </div>
    
<% end %>
