<div class="container">
  <h2 class="display-4 text-center mb-4">Edit Item</h2>

  <div class="row justify-content-center">
    <div class="col-md-6 border rounded shadow-sm p-4">
      <%= form_with model: @material do |form| %>
        <%= render "error_messages", resource: @material %>

        <div class="mb-3">
          <%= form.label :name, "Item name", class: "form-label" %> <br>
          <%= form.text_field :name, placeholder: "Edit the item name", class: "form-control" %>
        </div>

        <div class="text-center">
          <%= form.submit "Edit Item", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
